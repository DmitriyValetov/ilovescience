   "source": [
    "section = '{section}'\n",
    "year = {year}\n",
    "month = {month}\n",
    "volume = \"{}.{}.{}\".format(section, str(year).zfill(2), str(month).zfill(2))"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
