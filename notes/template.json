   "source": [
    "model = Word2Vec.load(\"../stat/word_vec/{}.wordvec\".format(volume))\n",
    "terms = topics_normalize(model, get_lines(\"../topics/{}.txt\".format(section)))\n",
    "extented_terms = [x[0] for term in terms for x in model.most_similar([term], topn=5)]\n",
    "draw_heatmap(volume, terms)"
   ]
